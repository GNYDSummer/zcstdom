/**index.wxss**/
.root-wrapper {
  min-height: 100vh;
  overflow: hidden;
}

.header-wrapper {
  background: rgba(0, 0, 0, 0.6) no-repeat center center;
  background-blend-mode: multiply;
  height: 40vh;
  color: #fff;
}

.header-content-wrapper {
  padding: 120px 15px 20px 15px;
}

.header-title {
  display: flex;
  justify-content: space-between;
}

.header-text {
  font-size: 32px;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}

.weather-advice {
  font-size: 15px;
  margin-top: 20px;
}

.body-wrapper {
  padding: 5px 15px 0 15px;
}

.data-wrapper {
  margin-top: 15px;
  display: flex;
  justify-content: space-around;
}

.data {
  background-color: #2f2f2f;
  width: 150px;
  height: 100px;
  display: flex;
  justify-content: space-between;
  border-radius: 5px;
  transition: transform 0.2s ease-in-out;
}

.data:active {
  transform: scale(0.95);
}

.data-left {
  margin-top: 11px;
  margin-left: 15px;
}

.data-logo {
  height: 36px;
  width: 36px;
}

.data-title {
  font-size: 14px;
  color: #7f7f7f;
}

.data-value {
  color: #7f7f7f;
  font-size: 22px;
  margin-top: 11px;
  margin-right: 15px;
}

.device {
  padding: 5px;
  margin-top: 10px;
  display: flex;
  justify-content: space-around;
}

.device-wrapper {
  background-color: #2f2f2f;
  border-radius: 5px;
  color: #fff;
  /* box-shadow: #d6d6d6 0px 0px 5px; */
  padding: 15px 15px;
  width: 150px;
}

.device-title {
  display: flex;
  justify-content: space-between;
}

.device-text {
  font-size: 20px;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
}

.device-advice {
  margin-top: 20px;
  font-size: 12px;
  text-align: center;
}

.add-logo {
  margin-bottom: 0px;
  position: fixed;
  width: 180rpx;
  height: 180rpx;
  bottom: 120rpx;
  right: 50rpx;
  z-index: 100;
  border-radius: 50%;
}
.bottom-wrapper{
  margin-top: 280px;
  font-size: 16px;
  color: #fff;
  text-align: center;
}